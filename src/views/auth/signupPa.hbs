<style>
    * {
        font-family: 'Raleway', sans-serif;
    }

    body {
        background: #abaaac;
        color: #786fa4;
        overflow-x: hidden;
        font-size: 14px;
    }

    .h-100vh {
        height: 100vh !important;
    }

    .card {
        margin: 0 auto;
        margin-top: 0px;
        max-width: 700px;
        border: none;
        -webkit-box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14),
            0 3px 1px -2px rgba(0, 0, 0, 0.12), 0 1px 5px 0 rgba(0, 0, 0, 0.2);
        box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14),
            0 3px 1px -2px rgba(0, 0, 0, 0.12), 0 1px 5px 0 rgba(0, 0, 0, 0.2);

    }

    @media only screen and (max-width: 767px) {
        body {
            padding-top: 20px;
        }

        .card {
            width: 100%;
        }
    }


    input[type="date"] {
        display: a;
    }

    .custom-control-input:checked~.custom-control-label::before {
        color: #FDFFFC !important;
        border-color: #26A598 !important;
        background-color: #26A598 !important;
    }

    .text-center {
        color: #FDFFFC !important;
        background-color: #ff445c !important;
    }

    .btn-primary {
        color: #FDFFFC;
        background-color: #ff416c;
        border-color: #ff416c;
    }

    .btn-primary:hover {
        background-color: #ff416c;
        border-color: #ff416c;
    }

    .card-header.display-4 {
        font-weight: bold;
    }

    button {
        border-radius: 20px;
        border: 1px solid #ff4b2b;
        background: #ff445c;
        color: #fff;
        font-size: 12px;
        font-weight: bold;
        padding: 12px 45px;
        letter-spacing: 1px;
        text-transform: uppercase;
        transition: transform 80ms ease-in;
    }
</style>

<div class="container h-100vh">
    <div class="row row h-100 align-items-center justify-content-centerr">
        <div class="col align-self-cente ">
            <div class="card">
                <div class="card-header text-center display-4">
                    Register Patient
                </div>
                <div class="card-body">
                    <form action="/signup-paciente" method="POST">
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="firstName">Name</label>
                                <input type="text" class="form-control" name="namep" placeholder="First Name" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="middleName">Apellido paterno</label>
                                <input type="text" class="form-control" name="surname_p" placeholder="Middle Name" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="middleName">Apellido materno</label>
                                <input type="text" class="form-control" name="surname_m" placeholder="Middle Name" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputState">CURP</label>
                                <input type="text" class="form-control" name="CURP_pa" placeholder="CURP" required>
                            </div>


                            <div class="form-group col-md-4">
                                <label for="inputState">Numero telefonico</label>
                                <input type="text" class="form-control" name="tel" placeholder="Numero telefonico"required maxlength="12">
                            </div>

                            <div class="form-group col-md-4">
                                <label for="inputState">birthday</label>
                                <input type="date" class="form-control" name="cumple"required>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="middleName">#Codigo Postal</label>
                                <input type="number" class="form-control" name="codigo_postal"
                                    placeholder="# Codigo postal" onchange="selectElement()" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="middleName">Estado</label>
                                <input type="text" class="form-control" name="id_esta"  placeholder="CDMX" disabled required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="middleName">Delegacion</label>
                                <select name="id_del" class="form-control">
                                    <option value="306">Álvaro Obregón</option>
                                    <option value="298">Azcapotzalco</option>
                                    <option value="310">Benito Juárez</option>
                                    <option value="299">Coyoacán</option>
                                    <option value="311">Cuauhtémoc</option>
                                    <option value="301">Gustavo A. Madero</option>
                                    <option value="302">Iztacalco</option>
                                    <option value="303">Iztapalapa</option>
                                    <option value="312">Miguel Hidalgo</option>
                                    <option value="300">Cuajimalpa</option>
                                    <option value="307">Tláhuac</option>
                                    <option value="308">Tlalpan</option>
                                    <option value="304">Magdalena Contreras</option>
                                    <option value="305">Milpa Alta</option>
                                    <option value="313">Venustiano Carranza</option>
                                    <option value="309">Xochimilco</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="middleName">Colonia</label>
                                <input type="text" class="form-control" name="name_col" placeholder="Delegacion"required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="middleName">Calle</label>
                                <input type="text" class="form-control" name="calle" placeholder="Calle"required>
                            </div>
                            <div class="form-group col-md-2">
                                <label for="middleName">Numero</label>
                                <input type="text" class="form-control" name="num_ext" placeholder="# Ext."required>
                            </div>
                            <div class="form-group col-md-2">
                                <label for="middleName">Interior</label>
                                <input type="text" class="form-control" name="num_int" placeholder="# Int."required>
                            </div>
                        </div>



                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="inputEmail4">Email</label>
                                <input type="email" class="form-control" name="username" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-row">    
                            <div class="form-group col-md-5">
                                <label for="inputPassword4">Password</label>
                                <input type="password" class="form-control" name="password" placeholder="Password">
                            </div>
                            <div class="form-group col-md-1"> </div>
                            <div class="form-group col-md-5">
                                <label for="inputPassword4">Confirm Password</label>
                                <input type="password" class="form-control" name="Password2" placeholder="Password">
                            </div>

                        </div>
                        <div class="form-group">
                            <center><a href="/signin" class="form-text text-muted">I have an account!</a></center>
                        </div>
                        <center><button class="ghost center" id="signUp">Registrarme</button></center>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>