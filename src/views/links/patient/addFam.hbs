<style>
    * {
        font-family: 'Raleway', sans-serif;
    }

    body {
        background: #abaaac;
        color: #786fa4;
        overflow-x: hidden;
        font-size: 14px;
    }

    .h-100vh {
        height: 75vh !important;
    }

    .card {
        margin: 0 auto;
        margin-top: 0px;
        max-width: 900px;
        border: none;
        -webkit-box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14),
            0 3px 1px -2px rgba(0, 0, 0, 0.12), 0 1px 5px 0 rgba(0, 0, 0, 0.2);
        box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14),
            0 3px 1px -2px rgba(0, 0, 0, 0.12), 0 1px 5px 0 rgba(0, 0, 0, 0.2);

    }

    @media only screen and (max-width: 767px) {
        body {
            padding-top: 20px;
        }

        .card {
            width: 100%;
        }
    }


    input[type="date"] {
        display: a;
    }

    .custom-control-input:checked~.custom-control-label::before {
        color: #FDFFFC !important;
        border-color: #26A598 !important;
        background-color: #26A598 !important;
    }

    .text-center {
        color: #FDFFFC !important;
        background-color: #ff445c !important;
    }

    .btn-primary {
        color: #FDFFFC;
        background-color: #ff416c;
        border-color: #ff416c;
    }

    .btn-primary:hover {
        background-color: #ff416c;
        border-color: #ff416c;
    }

    .card-header.display-4 {
        font-weight: bold;
    }

    button {
        border-radius: 20px;
        border: 1px solid #ff4b2b;
        background: #ff445c;
        color: #fff;
        font-size: 12px;
        font-weight: bold;
        padding: 12px 45px;
        letter-spacing: 1px;
        text-transform: uppercase;
        transition: transform 80ms ease-in;
    }

    .line {
        border-bottom: 5px solid rgb(5, 182, 209);
    }
</style>



<div class="container h-100vh">
    <div class="row row h-100 align-items-center justify-content-centerr">
        <div class="col align-self-cente ">
            <div class="card">
                <div class="card-header text-center display-4">
                    Datos de tu familiar
                </div>
                <div class="card-body">
                    <form action="/links/add/fam" method="POST">
                        <div class="form-row">
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="firstName">Nombre</label>
                                    <input type="text" class="form-control" name="namef" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="middleName">Apellido paterno</label>
                                    <input type="text" class="form-control" name="apellido_p" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="middleName">Apellido materno</label>
                                    <input type="text" class="form-control" name="apellido_m" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="CURP">CURP</label>
                                    <input type="text" class="form-control" name="CURP" required>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="firstName">Numero</label>
                                    <input type="number" class="form-control" name="tel" placeholder="Numero"required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="middleName">#Codigo Postal</label>
                                    <input type="text" class="form-control" name="codigo_postal"
                                        placeholder="Codigo Postal" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="phonenumber">Estado</label>
                                    <input type="text" class="form-control" name="id_esta" value="CDMX" disabled>
                                    <input type="hidden" class="form-control" name="id_esta" value="CDMX" >
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="phonenumber">Delegacion</label>
                                    <select name="id_del" class="form-control">
                                        <option value="306">Álvaro Obregón</option>
                                        <option value="298">Azcapotzalco</option>
                                        <option value="310">Benito Juárez</option>
                                        <option value="299">Coyoacán</option>
                                        <option value="311">Cuauhtémoc</option>
                                        <option value="301">Gustavo A. Madero</option>
                                        <option value="302">Iztacalco</option>
                                        <option value="303">Iztapalapa</option>
                                        <option value="312">Miguel Hidalgo</option>
                                        <option value="300">Cuajimalpa</option>
                                        <option value="307">Tláhuac</option>
                                        <option value="308">Tlalpan</option>
                                        <option value="304">Magdalena Contreras</option>
                                        <option value="305">Milpa Alta</option>
                                        <option value="313">Venustiano Carranza</option>
                                        <option value="309">Xochimilco</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-4">
                                    <label>Colonia</label>
                                    <input type="text" class="form-control" name="name_col" placeholder="Colonia"required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="middleName">Calle</label>
                                    <input type="text" class="form-control" name="calle" placeholder="Calle" required>
                                </div>
                                <div class="form-group col-md-2">
                                    <label for="middleName">Numero</label>
                                    <input type="text" class="form-control" name="num_ext" placeholder="# Ext." required>
                                </div>
                                <div class="form-group col-md-2">
                                    <label for="middleName">Interior</label>
                                    <input type="text" class="form-control" name="num_int" placeholder="# Int."required>
                                </div>
                            </div>
                        </div>
                        <br>
                        <center><button class="ghost center">Agregar familiar</button> </center>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>